.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #aaa;
}

.newTodo {
    border: none;
    background: rgba(0, 0, 0, 0.003);
    box-shadow: inset 0 -2rpx 1rpx rgba(0,0,0,0.03);
    padding: 20rpx 20rpx 20rpx 60rpx;
}

.mainBody {
    margin: 20rpx;
}

.input {
    margin-bottom: 10rpx;
    box-shadow: 0 2rpx 4rpx 0 rgba(0, 0, 0, 0.2), 0 20rpx 40rpx 0 rgba(0, 0, 0, 0.1);
}

checkbox-group {
    display: flex;
    flex-direction: column;
}

.todoListTitle {
    font-size: 60rpx;
    color: rgba(96, 223, 229, 0.35);
    text-rendering: optimizeLegibility;
    margin-bottom: 30rpx;
}

.checkbox {
    text-align: left;
    line-height: 80rpx;
}

.doneCheckBox {
    color: dimgrey;
    text-decoration: line-through;
}

.btn {
    vertical-align: middle;
    float: right;
}

